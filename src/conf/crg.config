process {
    executor = 'crg'
    maxRetries = 100
    errorStrategy = "retry"
    maxRetries = 2
    queue = 'cn-el7,short-sl7'

    withLabel:customConf {
        memory = "30 GB"
        cpus = 8
        queue = 'long-sl7,cn-el7@node-hp0700cn,cn-el7@node-hp0704cn'
        time = 24.h
    }
    withLabel:medium {
        queue = 'long-sl7,cn-el7'
        memory = "15 GB"
        time = 8.h
    }
    withLabel:long {
        queue = 'long-sl7,cn-el7'
        memory = "10 GB"
        time = 24.h
    }
    withLabel:high {
        queue = 'mem_512_12h'
        memory = "400 GB"
        time = 12.h
        cpus = 8
    }

    withLabel:small {
          queue = 'cn-el7,short-sl7'
          cpus = 1
          memory = "10 GB"
          time = 1.h
    }
}

